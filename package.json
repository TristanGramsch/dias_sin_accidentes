{
  "name": "dias-sin-accidentes",
  "version": "1.0.0",
  "description": "Node.js application to track days without incidents - Docker ready for port 443 deployment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t dias-sin-accidentes .",
    "docker:run": "docker run -d --name dias-counter -p 443:443 --restart unless-stopped dias-sin-accidentes",
    "docker:stop": "docker stop dias-counter",
    "docker:logs": "docker logs dias-counter",
    "docker:update": "npm run docker:stop && docker rm dias-counter && npm run docker:build && npm run docker:run"
  },
  "keywords": ["safety", "counter", "incidents", "workplace", "docker", "raspberry-pi"],
  "author": "Sistema de Seguridad Laboral",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
} 