{
  "name": "dias-sin-accidentes",
  "version": "1.0.0",
  "description": "Node.js application to track days without incidents - Docker ready for port 443 deployment",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:build": "docker build -t dias-sin-accidentes .",
    "docker:run": "docker run -d --name dias-counter -p 8080:8080 --restart unless-stopped dias-sin-accidentes",
    "docker:stop": "docker stop dias-counter",
    "docker:logs": "docker logs dias-counter",
    "docker:update": "npm run docker:stop && docker rm dias-counter && npm run docker:build && npm run docker:run"
  },
  "keywords": [
    "safety",
    "counter",
    "incidents",
    "workplace",
    "docker",
    "raspberry-pi"
  ],
  "author": "Optoelectr√≥nica Icalma",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "luxon": "^3.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "vitest": "^3.2.4"
  }
}